FROM golang:1.22-bookworm AS builder

WORKDIR /build
COPY vultisig-relay/ .

RUN CGO_ENABLED=0 go build -ldflags="-s -w" -o /relay-server ./cmd/router

FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y --no-install-recommends ca-certificates curl && rm -rf /var/lib/apt/lists/*

COPY --from=builder /relay-server /usr/local/bin/relay-server
COPY frozt-zcash/poc-frozt/relay-config.json /etc/relay/config.json

EXPOSE 9090

ENTRYPOINT ["relay-server", "-config", "/etc/relay/config.json"]
